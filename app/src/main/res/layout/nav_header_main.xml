<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription=""
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/loading100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Login"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/windowBackground"
                tools:text="Login" />

            <TextView
                android:id="@+id/txvOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/organization"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/windowBackground"
                tools:text="@string/organization" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvUserType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:contentDescription="usertype"
            android:textColor="@color/windowBackground"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="usertype" />

        <TextView
            android:id="@+id/txvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:contentDescription="fullName"
            android:textColor="@color/windowBackground"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:text="fullName" />
    </LinearLayout>


</LinearLayout>
