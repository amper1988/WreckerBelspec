<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.belspec.app.views.DrawingView
        style="@style/MyMaterialTheme.MyDrawingView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/viewDrawer"/>
    <TextView
        android:textColor="@color/cardview_shadow_start_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_signature"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDrawer">
        <Button
            style = "@style/MyMaterialTheme.MyButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="0dp"
            android:padding="1dp"
            android:id="@+id/btnClear"
            android:drawableLeft="@drawable/ic_delete_white_24dp"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            android:text="@string/clear"/>


    </LinearLayout>

</RelativeLayout>